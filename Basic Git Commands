git --version
git config --global user.name "..."
git config --global user.email "..."
git config --list
mkdir Code
git init --initial-branch=main
git status                              # shows the branch we are in
git help
git log                                 # see list of changes
# press q to exit from git log

#Pro Git: https://git-scm.com/book/en/v2

git checkout -b 1690-fix1                 # make a new branh and switch to it
git checkout <branch name>                # to move to a branch like master
git add filename                          # add a file or change
git commit -a -m "comment"                # -a comment about all files changes -m comment about specefic file changes
git diff
git pull origin master                    # update all the files inside the main branch (mater)
git push origin <my branch>               # confirm changes on the branch
git log                                   # to see the list of changes; press q to exit from view
git status                                # what branch I am on


git init
git remote add origin <git link>
git remote -v
git add .
git commit -m "comment"
git push origin master

git branch -D <branch name>                 # delete branch locally when you are not on that branch
git push origin --delete <branch name>      # delete the branch from github



# create a new repository on the command line
# creat a repository in github and copy the link
git init
git add README.md
git commit -m "first commit"
git branch -M main
git remote add origin https://github.com/arash26m/test.git
git push -u origin main

# push an existing repository from the command line
git remote add origin https://github.com/arash26m/test.git
git branch -M main
git push -u origin main
